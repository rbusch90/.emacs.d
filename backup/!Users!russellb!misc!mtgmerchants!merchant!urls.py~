from django.conf.urls import patterns, include, url

urlpatterns = patterns('',
    url(r'^$', 'mtgmerchants.views.login_redirect'),
    url(r'^(?P<merchant_name>[^\/]+)/$', 'merchant.views.inventory_system'),
    url(r'^(?P<merchant_name>[^\/]+)/lookup_singles/$', 'merchant.views.search_results'),

    url(r'^ajax/add_to_cart/$', 'merchant.views.add_to_sale'),
    url(r'^ajax/remove_from_cart/(?P<card_pk>\d+)/$', 'merchant.views.remove_from_sale'),
    url(r'^ajax/clear_cart/$', 'merchant.views.clear_sale'),
    url(r'^ajax/cash_out/$', 'merchant.views.cash_out'),
    url(r'^ajax/current_sale/$', 'merchant.views.current_sale'),
)
