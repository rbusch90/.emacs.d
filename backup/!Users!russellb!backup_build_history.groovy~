for (item in Hudson.instance.getView("WolframAlpha").getView("Paclets").getItems()){

    if (!item.getName().contains("inheritance") && !item.getName().contains("AbstractPacletBuild")){
       item.delete()
    }
}

for (item in Hudson.instance.getView("WolframAlpha").getView("Paclets").getItems()){

    if (item.getName().contains("inheritance")){
       item.renameTo(item.getName().replace("-inheritance","")
    }
}