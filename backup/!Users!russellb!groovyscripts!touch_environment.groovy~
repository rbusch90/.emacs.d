import org.jenkinsci.plugins.envinject.EnvInjectPluginAction;
import hudson.model.Job;

job = Hudson.instance.getItems().find{ it.name == "HelloJob" }
project_name = "SuperHappyFunTestJob";
build = job.getBuild("1");
envAction = build.getAction(EnvInjectPluginAction.class);

item_group = build.getProject().getParent();
if (item_group instanceof Job){
    item_group = item_group.getParent();
}

envAction.add(item_group, projectName, build.getNumber())