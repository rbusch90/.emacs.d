(* ::Package:: *)

getPacletDeploymentsAsList[pacletName_String] := Module[{},
	jsonData = Import[
		"http://re-monitor.wolfram.com/job/"<> pacletName <> "/deployments/api/json?depth=1","JSON"];
	Return["nodes" /. jsonData]
]

getPacletDeploymentsAsTable[pacletName_String] := Return[
	jsonData = getPacletDeploymentsAsList[pacletName];
	TableForm[jsonData[[All,All,2]],TableHeadings->{None,jsonData[[1,All,1]]}]
]
